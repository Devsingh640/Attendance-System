<%include ./partials/header%>
<div class="container">
<div class="row">
  <h1 style="text-align: center">Edit profile of <%=currentUser.username%></h1>
  <div class="rwd-form">
    <form action="/stafflogin/edit?_method=PUT" method="POST" >
      <div class="form-group">
        <caption>Personal Details</caption>  
        <br>
        <br>

      
        <label for="first_name"><b><u>F</u>irst Name:</b></label>
        <input id="first_name" class="form-control" type="text" name="user[first_name]" placeholder="ABC" value="<%=user.first_name%>" required />

        <label for="middle_name"><b><u>M</u>iddle Name:</b></label>
        <input class="form-control" id="middle_name" type="text" placeholder="OPTIONAL" name="user[middle_name]" value="<%=user.middle_name%>" />

        <label for="last_name"><b><u>L</u>ast Name:</b></label>
        <input class="form-control" id="last_name" type="text" name="user[last_name]" placeholder="XYZ" value="<%=user.last_name%>" required />

        <label><b><u>G</u>ender:</b></label>

        <input id="male" type="radio" name="user[gender]" placeholder="XYZ" value="male" required />
        <label id="male">Male</label>

        <input id="female" type="radio" name="user[gender]" placeholder="XYZ" value="female" required />
        <label id="male">Female</label>

        <input id="transgender" type="radio" name="user[gender]" value="transgender" placeholder="XYZ" required />
        <label>Transgender</label>
      </div>

      <div class="form-group">
        <caption>Contact Details</caption>  
        <br>
        <br>

        <label for="email"><b><u>E</u>mail:</b></label>
        <input class="form-control" id="email" type="email" value="<%=user.email%>" pattern="[a-z0-9._%+-]+@[a-z0-9.-]+\.[a-z]{2,}$" name="user[email]" placeholder="abc@xyz.com" required />

        <label for="mobile_number"><b><u>M</u>obile number:</b></label>
        <input class="form-control" type="tel" size="10" pattern="[0-9]{10}" name="user[mobile_number]" value="<%=user.mobile_number%>" placeholder="10 DIGIT NUMBER" required />

        <label for="Landline_number"><b><u>L</u>andline number:</b></label>
        <input class="form-control" id="Landline_number" type="text" name="user[Landline_number]" value="<%=user.Landline_number%>"placeholder="STD code - xxxxxxx" required />
      </div>

      <div class="form-group">
        <button class="btn btn-md btn-primary btn-block">Request</button>
      </div>
    </form>
    <hr>
    <a href="/">Back</a>
  </div>
</div>
</div>
</div>
<%include ./partials/footer%>